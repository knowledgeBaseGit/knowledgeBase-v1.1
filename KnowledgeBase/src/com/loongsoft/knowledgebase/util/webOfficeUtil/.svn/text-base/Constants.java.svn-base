package com.loongsoft.knowledgebase.util.webOfficeUtil;

/**
 * 定义文件上传中使用到的常量
 * @author suoyanming 
 * @date 2013-9-17
 */
public class Constants{
	/**
	 * 文档所在目录的路径
	 */
	public static final String docFolderPath = "/docFolder";
	/**
	 * 超过该数值就存储到临时文件夹，默认: 10240（字节）
	 */
	public static final int sizeThreshold = 51200;
	/**
	 * 临时文件夹，默认 %tomcat%\work\Catalina\localhost\%webapp_name%
	 */
	public static final String tmpDir = "javax.servlet.context.tempdir";
	/**
	 * request 的大小， -1 表示没有限制，默认 -1， 单位：字节
	 */
	public static final long requestSize = -1;
}
